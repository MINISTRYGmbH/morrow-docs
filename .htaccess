# This section is for redirecting ALL requests to the public folder
# ---------------------------------------------------------------------------------------------
RewriteCond %{REQUEST_URI} !/public/
RewriteRule ^(.*)$ public/$1 [L]

# Set rewrite base. The slash before $1 simulates a "RewriteBase /"
RewriteCond %{REQUEST_URI} !/public/
RewriteCond %{HTTP_HOST} \.[a-z]{2,}$
RewriteRule ^(.*)$ /$1


# Map all non framework (eg. assets) requests to the public/ subfolder (also features)
# ---------------------------------------------------------------------------------------------
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^features/(.+)/public/(.+) app/features/$1/public/$2


# Map request to index.php if the file was not found
# ---------------------------------------------------------------------------------------------
# set rewrite base for development URLs (simple host names and IPs)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^public/([a-z0-9\-/]*)$ public/index.php?morrow_path_info=$1 [QSA,NC]


# Prevent directory listing
# ---------------------------------------------------------------------------------------------
Options -Indexes


# Deflate static ressources
# ---------------------------------------------------------------------------------------------
<Ifmodule mod_deflate.c>
	AddOutputFilterByType DEFLATE text/html text/plain text/css application/json
	AddOutputFilterByType DEFLATE text/javascript application/javascript application/x-javascript 
	AddOutputFilterByType DEFLATE text/xml application/xml text/x-component
</IfModule>
